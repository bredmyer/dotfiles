" load plugins correctly
filetype off

" TODO: - load plugins here (pathogen)

" turn on syntax highlighting
syntax on

" load plugins correctly
filetype plugin indent on

" set a leader key
let mapleader=","

" show line numbers
set number

" encoding
set encoding=utf-8

" whitespace
set textwidth=110
set tabstop=4
set softtabstop=4
set expandtab

" searching
set hlsearch
set incsearch
set ignorecase
set smartcase
set showmatch
